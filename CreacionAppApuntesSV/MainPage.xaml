<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CreacionAppApuntesSV.MainPage"
             Title="App de Apuntes - Sebastian Vallejo">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Lectura del archivo:" FontSize="20" />
        <Label x:Name="LabelArchivo"
               Text="Contenido del archivo aparecerá aquí"
               FontSize="16"
               TextColor="DarkBlue" />

        <Editor x:Name="TxtArchivo"
                Placeholder="Escribe tus apuntes aquí..."
                AutoSize="TextChanges"
                HeightRequest="100"/>

        <Button Text="Guardar Archivo"
                Clicked="BtnGuardarArchivo_Clicked" 
                BackgroundColor="#2196F3" 
                TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
