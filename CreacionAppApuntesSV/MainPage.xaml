<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CreacionAppApuntesSV.MainPage"
             Title="Inicio">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Sebastián Vallejo - App de Apuntes"
               FontSize="24"
               HorizontalOptions="Center" />

        <Editor x:Name="TxtArchivo"
                Placeholder="Escribe aquí tus apuntes"
                AutoSize="TextChanges"
                HeightRequest="150" />

        <Button Text="Guardar Apunte"
                Clicked="BtnGuardarArchivo_Clicked" />

        <Label Text="Contenido guardado:"
               FontAttributes="Bold"
               FontSize="18"
               Margin="0,20,0,0" />

        <Label x:Name="LabelArchivo"
               FontSize="16"
               TextColor="DarkSlateGray" />
    </VerticalStackLayout>
</ContentPage>
