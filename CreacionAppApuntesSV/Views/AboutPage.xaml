<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CreacionAppApuntesSV.Views.AboutPage"
             Title="Acerca de">

    <VerticalStackLayout Padding="30" Spacing="25">

        <!-- Ícono representativo -->
        <Image Source="tuntun.jpg"
               HeightRequest="140"
               WidthRequest="140"
               HorizontalOptions="Center"
               Aspect="AspectFill"
               Clip="Circle" />

        <!-- Nombre del estudiante -->
        <Label Text="Sebastián Vallejo"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Descripción personal -->
        <Label Text="Soy estudiante de Ingeniería de Software. Me interesa crear aplicaciones útiles y explorar nuevas tecnologías. Esta app es un ejemplo de manejo de archivos con .NET MAUI."
               FontSize="16"
               TextColor="Gray"
               HorizontalTextAlignment="Center"
               Margin="10,0"/>
    </VerticalStackLayout>
</ContentPage>
